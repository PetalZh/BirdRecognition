<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#ccb6d2f9">

    <TextView
        android:id="@+id/tv_pop_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="#1f003d"
        android:background="#99debcff"
        android:textSize="20dp"
        android:gravity="center"
        android:text="bird name">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/img_pop"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/a1">
        </ImageView>
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:gravity="center"
                android:textSize="25dp"
                android:text="Confidence:"
                android:textColor="#0d9996"/>

            <TextView
                android:id="@+id/tv_pop_confidence"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#00542c"
                android:text="00.00%"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_pop_description"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:text="Description"
        android:textSize="15dp"
        android:textColor="#242326"
        android:background="#99ddd0f2"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:scrollbars="vertical"
        android:singleLine="false">
    </TextView>


</LinearLayout>